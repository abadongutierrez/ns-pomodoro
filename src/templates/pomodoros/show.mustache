{{> header}}

<style type="text/css">
    #countdown { width: 240px; height: 45px; }
    .pomodoro-resting {
        border: 1px solid #ccc;
        background-color: lightgreen;
    }
    .pomodoro-working  {
        border: 1px solid #ccc;
        background-color: lightcoral;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="title-pomodoro">{{title}}</div>

            <div class="total-pomodoros">Total pomodoros so far: {{total-pomodoros}}</div>

            <div class="pomodoro-actions">
                <span id="current-pomodoro-button">
                    <button type="button" id="start" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-play"></span> Start Pomodoro
                    </button>
                </span>
                <span id="next-pomodoro-button" style="display: none">
                    <form action="/tasks/{{task.task_id}}/pomodoros" method="POST">
                        <button type="submit" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-time"></span> New Pomodoro
                        </button>
                    </form>
                </span>
            </div>

            <!-- HTML -->
            <div id="countdown"></div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

<link rel="stylesheet" href="/vendor/jquery.countdown-2.0.0/css/jquery.countdown.css">
<script src="/vendor/jquery.countdown-2.0.0/js/jquery.plugin.min.js"></script>
<script src="/vendor/jquery.countdown-2.0.0/js/jquery.countdown.min.js"></script>

<script type="text/javascript" charset="utf-8">
// Javascript
$(function() {
    window.isActive = true;
    $(window).focus(function() { this.isActive = true; });
    $(window).blur(function() { this.isActive = false; });

    //var buzzSound = new Audio('/audio/Buzz-SoundBible.com-1790490578.mp3');
    //var taDaSound = new Audio('/audio/Ta_Da-SoundBible.com-1884170640.mp3');

    function onPomodoroWorked() {
        $('#countdown').countdown('destroy');
        console.log('isActive ' + isActive);
        //var playSoundWorker = new Worker('/js/play-sound.js');
        //playSoundWorker.postMessage(buzzSound);
        // 300 = 5 minutes
        $('#countdown').countdown({until: +3, format: 'MS', onExpiry: onPomodoroRested});
        $('#countdown').removeClass('pomodoro-working is-countdown').addClass('pomodoro-resting');         
    }

    function onPomodoroRested() {
        $('#countdown').countdown('destroy');
        $.post("/tasks/{{pomodoro.task_id}}/pomodoros/{{pomodoro.pomodoro_id}}/end");
        console.log('isActive ' + isActive);
        //var playSoundWorker = new Worker('/js/play-sound.js');
        //playSoundWorker.postMessage(taDaSound);
        $('#current-pomodoro-button').hide();
        $('#next-pomodoro-button').show();
    }

    $('#start').click(function() {
        $('#start').fadeOut();
        $.post("/tasks/{{pomodoro.task_id}}/pomodoros/{{pomodoro.pomodoro_id}}/start", {}, function() {
            // 1500 = 25 minutes
            $('#countdown').countdown({until: +5, format: 'MS', onExpiry: onPomodoroWorked});
            $('#countdown').removeClass('is-countdown').addClass('pomodoro-working');
        }, "text");
    })
});
</script>

