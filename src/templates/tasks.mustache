{{> header}}

<h1>{{title}}</h1>

<div id="div-new-task">
    <form class="form-inline" role="form" action="tasks" method="POST">
      <div class="form-group">
        <input type="text" class="form-control" name="name" placeholder="Enter Task Name">
      </div>
      <button type="submit" class="btn btn-default">Add</button>
    </form>
</div>

<p>These are your tasks:</p>

<ul class="task-list">
{{#tasks}}
    <li>
        <div class="task">
            {{name}}
            <div class="task-actions">
                <span>
                    <form action="/tasks/{{task_id}}/pomodoros" method="POST">
                        <button type="submit" class="btn btn-default">New Pomodoro</button>
                    </form>
                </span>
            <div>
        </div>
    </li>
{{/tasks}}
</ul>

{{> footer}}