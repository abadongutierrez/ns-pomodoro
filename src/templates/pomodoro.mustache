{{> header}}

<style type="text/css">
    #countdown { width: 240px; height: 45px; }
    .pomodoro-resting {
        border: 1px solid #ccc;
        background-color: lightgreen;
    }
    .pomodoro-working  {
        border: 1px solid #ccc;
        background-color: lightcoral;
    }
</style>

<h1>{{title}}</h1>

<div class="pomodoro-actions">
    <span id="current-pomodoro-button">
        <button type="button" id="start" class="btn btn-default">Start Pomodoro</button>
    </span>
    <span id="next-pomodoro-button" style="display: none">
        <form action="/tasks/{{task.task_id}}/pomodoros" method="POST">
            <button type="submit" class="btn btn-default">New Pomodoro</button>
        </form>
    </span>
</div>

<div id="countdown"></div>

<!-- jquery -->
<script src="/vendor/jquery-1.11.1/js/jquery-1.11.1.min.js"></script>

<!-- jquery countdown -->
<link rel="stylesheet" href="/vendor/jquery.countdown-2.0.0/css/jquery.countdown.css">
<script src="/vendor/jquery.countdown-2.0.0/js/jquery.plugin.min.js"></script>
<script src="/vendor/jquery.countdown-2.0.0/js/jquery.countdown.min.js"></script>

<script src="/js/pomodoro.js"></script>

<script type="text/javascript">
    $(function() {
        App.Pomodoro = App.createPomodoro({
            task: {
                taskId: {{task.task_id}} 
            }
        });
    });
</script>

{{> footer}}