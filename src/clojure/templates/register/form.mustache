{{> inner-header}}

<div class="title">{{title}}</div>

<!-- TODO Change the use of errors.<field>.is to errors.<field> -->
<div>
    <form role="form" action="/register" method="POST" novalidate>
        <div class="form-group {{#errors.username.is}}has-error{{/errors.username.is}}">
            <label for="username" class="control-label col-sm-2">Username<super style="color: red;">*</super></label>
            <div class="col-sm-10 col-xs-4">
                <input type="text" class="form-control input-sm" id="username" name="username" placeholder="Username" value="{{username}}">
                {{#errors.username.is}}<span class="control-label">{{errors.username.text}}</span>{{/errors.username.is}}
            </div>
        </div>
        <div class="form-group {{#errors.email.is}}has-error{{/errors.email.is}}">
            <label for="email" class="control-label col-sm-2">Email<super style="color: red;">*</super></label>
            <div class="col-sm-10 col-xs-4">
                <input type="email" class="form-control input-sm" id="email" name="email" placeholder="Email" value="{{email}}">
                {{#errors.email.is}}<span class="control-label">{{errors.email.text}}</span>{{/errors.email.is}}
            </div>
        </div>
        <div class="form-group {{#errors.password.is}}has-error{{/errors.password.is}}">
            <label for="password" class="control-label col-sm-2">Password<super style="color: red;">*</super></label>
            <div class="col-sm-10 col-xs-4">
                <input type="password" class="form-control input-sm" id="password" name="password" placeholder="Password">
                {{#errors.password.is}}<span class="control-label">{{errors.password.text}}</span>{{/errors.password.is}}
            </div>
        </div>
        <div class="form-group {{#errors.password.is}}has-error{{/errors.password.is}}">
            <label for="password2" class="control-label col-sm-2">Retype Password<super style="color: red;">*</super></label>
            <div class="col-sm-10 col-xs-4">
                <input type="password" class="form-control input-sm" id="password2" name="password2" placeholder="Retype Password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default btn-sm">Submit</button>
            </div>
        </div>
    </form>
</div>

{{> inner-footer}}